  <div id="map"></div>

  <script>
    function initMap() {
      var pickup = {lat: {{ pickup_lat }}, lng: {{ pickup_lng }} };
      var drop = {lat: {{ drop_lat }}, lng: {{ drop_lng }} };

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 13,
        center: pickup
      });

      var pickupMarker = new google.maps.Marker({ position: pickup, map: map, label: "P" });
      var dropMarker = new google.maps.Marker({ position: drop, map: map, label: "D" });

      // Draw route
      var directionsService = new google.maps.DirectionsService();
      var directionsRenderer = new google.maps.DirectionsRenderer();
      directionsRenderer.setMap(map);

      var request = {
        origin: pickup,
        destination: drop,
        travelMode: 'DRIVING'
      };

      directionsService.route(request, function(result, status) {
        if (status == 'OK') {
          directionsRenderer.setDirections(result);
        }
      });
    }

    function startNavigation(){
      alert("Ride started ðŸš— ... real-time tracking begins!");
    }

    window.onload = initMap;
  </script>
